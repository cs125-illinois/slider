{
  "name": "slider",
  "private": true,
  "scripts": {
    "depcheck": "depcheck --ignores=css-loader,expose-loader,node-sass,sass-loader,webpack-cli,ws",
    "eslint": "eslint server.js worker.js client/*.js --fix",
    "build": "build-if-changed",
    "webpack": "webpack",
    "docker:build": "cross-conf-env docker build . -t cs125/slider:$npm_package_version",
    "postdocker:build": "npm run docker:tag",
    "docker:tag": "cross-conf-env docker tag cs125/slider:$npm_package_version cs125/slider:latest",
    "docker:push": "cross-conf-env docker push cs125/slider:$npm_package_version && cross-conf-env docker push cs125/slider:latest",
    "start": "node server.js --debug"
  },
  "dependencies": {
    "bespoke": "^1.1.0",
    "bespoke-bullets": "^1.1.0",
    "bespoke-classes": "^1.0.0",
    "bespoke-extern": "^1.0.0",
    "bespoke-forms": "^1.0.0",
    "bespoke-fullscreen": "^1.0.0",
    "bespoke-hash": "^1.1.0",
    "bootstrap": "^4.4.1",
    "build-if-changed": "^0.1.2",
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "chai": "^4.2.0",
    "codemirror": "^5.50.2",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "filewatcher": "^3.0.1",
    "google-auth-library": "^5.9.1",
    "hammerjs": "^2.0.8",
    "highlight.js": "^9.17.1",
    "jquery": "^3.4.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "minimist": "1.2.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "mongodb": "^3.5.1",
    "popper.js": "^1.16.0",
    "sc-hot-reboot": "~1.0.0",
    "serve-static": "^1.14.1",
    "socketcluster": "^14.4.2",
    "socketcluster-client": "^14.3.1",
    "split.js": "^1.5.11",
    "webpack": "^4.41.5",
    "webpack-cleanup-plugin": "^0.5.1",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "cross-conf-env": "^1.1.2",
    "css-loader": "^3.4.2",
    "depcheck": "^0.9.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "expose-loader": "^0.7.5",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "webpack-cli": "^3.3.10"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "$": "readonly"
    },
    "extends": [
      "eslint:recommended",
      "standard"
    ],
    "rules": {
      "require-atomic-updates": "off",
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ]
    }
  },
  "version": "2020.1.0"
}
